{
  "name": "peertube-plugin-auto-set-lang",
  "description": "Plugin to automatically define video languages by browser language if undefined (in video settings on upload and in videos list in frontend)",
  "version": "1.0.0",
  "author": "Nalem",
  "bugs": "https://www.orion-hub.fr",
  "clientScripts": [
    {
      "script": "dist/common-client-plugin.js",
      "scopes": [
        "common"
      ]
    },
    {
      "script": "dist/video-edit-client-plugin.js",
      "scopes": [
        "video-edit"
      ]
    }
  ],
  "css": [
    "assets/style.css"
  ],
  "engine": {
    "peertube": ">=1.3.0"
  },
  "homepage": "https://www.orion-hub.fr",
  "keywords": [
    "peertube",
    "plugin"
  ],
  "library": "./main.js",
  "scripts": {
    "prepare": "npm run build",
    "build": "node ./scripts/build.js"
  },
  "staticDirs": {
    "images": "public/images"
  },
  "translations": {
    "fr-FR": "./languages/fr.json"
  },
  "devDependencies": {
    "esbuild": "^0.14.36"
  }
}
